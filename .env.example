# Application Settings
APP_NAME=SIIAPI
APP_SITE=localhost
APP_ENV=dev
APP_DESCRIPTION=Sistema de Informaci√≥n Institucional API
APP_VERSION=0.0.1

# Debug Mode
# - True: Uses SQLModel create_all() + automatic seed data (Development)
# - False: Uses Alembic migrations (Production)
APP_DEBUG=true

# Database Configuration
DB_URL=sqlite:///./db.sqlite3
# For PostgreSQL:
# DB_URL=postgresql://user:password@localhost:5432/dbname
# For MySQL:
# DB_URL=mysql://user:password@localhost:3306/dbname

# Database Seeding (Production only)
# Set to true to run seed data automatically on startup when APP_DEBUG=False
# Recommended: Enable only for first deployment, then disable
DB_SEED_ON_STARTUP=false

# Security
SECRET_KEY=your-secret-key-change-this-in-production
DUMMY_HASH=your-dummy-hash
ALGORITHM=HS256

# External Services
SIIAU_URL=https://siiau.example.com